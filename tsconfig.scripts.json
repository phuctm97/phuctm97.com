{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "outDir": "js",
    "baseUrl": ".",
    "paths": { "@/*": ["packages/*"], "~/*": ["./*"] },
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", ".next"],
  "include": [
    "next-env.d.ts",
    "scripts/**/*.ts",
    "packages/**/*.ts",
    "utils/**/*.ts"
  ]
}
